@model IEnumerable<Post>

@{
    ViewBag.Title = "Blog Title";
    ViewBag.Description = "Blog Description";
    ViewBag.Keyword = "blog progreamming travel photography";
}


<div class="main-img">
    <span class="title">Cofdream Blog Site</span>
</div>

<div class="container">

    @foreach (var post in Model)
    {
        var image_path = $"/Image/{post.Image}";
        <a class="post" asp-controller="Home" asp-action="Post" asp-route-id="@post.Id">

            <img src="@image_path" width="500" />
            <span class="title">

                @post.Title

            </span>

        </a>
    }

</div>