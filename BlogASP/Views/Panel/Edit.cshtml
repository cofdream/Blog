@model PostViewModel


@{

}

<link href="~/lib/trumbowyg-main/dist/ui/trumbowyg.min.css" rel="stylesheet" />

<div>
    <form asp-controller="Panel" asp-action="Edit" method="post" enctype="multipart/form-data">

        <div>
            <label>Title</label>
            <input asp-for="Title" />

        </div>

        <div>
            <label>Description</label>
            <input asp-for="Description" />

        </div>

        <div>
            <label>Tags</label>
            <input asp-for="Tags" />

        </div>

        <div>
            <label>Category</label>
            <select asp-for="Category">
                <option value="Programing">Programing</option>
                <option value="Game">Game</option>
                <option value="Move">Move</option>
            </select>

        </div>


        <div>
            <label>Body</label>
            <textarea id="edit" asp-for="Body"></textarea>

        </div>

        <div>
            <label>Image</label>
            <input asp-for="CurrentImage" type="hidden" />
            <input asp-for="Image" />

        </div>

        <input type="submit" value="Submit" />

    </form>
</div>

@section scripts {
    <script src="//ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="~/lib/trumbowyg-main/dist/trumbowyg.min.js"></script>
    <script src="~/lib/trumbowyg-main/dist/langs/zh_cn.min.js"></script>
    <script>
        $('#edit').trumbowyg();

        // . - class
        // # - id
        // nav - html element

        $('textarea').trumbowyg({
            lang: 'fr'
        });
    </script>
}